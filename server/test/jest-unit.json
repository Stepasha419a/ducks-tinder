{
  "roots": ["<rootDir>"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "testRegex": ".unit.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleDirectories": ["node_modules", "src"],
  "moduleNameMapper": {
    "test/(.*)": "<rootDir>/$1"
  }
}
